<h2 style="color:crimson;">Todos los productos</h2>
<script src="/socket.io/socket.io.js"></script>
    <script src="../productos.js"></script>
<% if(productos.length > 0){ %>
    <div id="borrarProducto" class="table-responsive">
        <table class="table table-dark">
            <% for (const producto of productos) {%>
            <tr>
                <td><%-producto.name%></td>
                <td><%-producto.price%></td>
                <td><%-producto.description%></td>
                <td> <img src="../../productos.json" alt="" width="100%"> </td>


                <td>
                 <input type="submit" value="borrar">
                </td>

            </tr>
            <%};%>
        </table>
    </div>
<% } else{ %>
    <h3 class="alert alert-danger">no se encontraron datos</h1>
<% } %>
<script>
    function borrarProducto(e){
        e.preventDefault();
        var id = e.target.parentNode.parentNode.children[0].innerText;
        console.log(id);
        $.ajax({
            url: 'http://localhost:8080/agregar/'+id,
            type: 'DELETE',
            success: function(result){
                console.log(result);
                window.location.reload();
            }
        });
    }
    function agregarProducto(e){
        e.preventDefault();
        var id = e.target.parentNode.parentNode.children[0].innerText;
        console.log(id);
        $.ajax({
            url: 'http://localhost:8080/agregar/'+id,
            type: 'GET',
            success: function(result){
                console.log(result);
                window.location.reload();
            }
        });
    }


